<% cache @product do %>
    <div class="bg-gray-100 py-10 px-10 w-full max-w-64">
      <div class="container mx-auto bg-white shadow-2xl  rounded-2xl p-20 text-left">
        
        <!-- Título del producto -->
        <h1 class="text-4xl font-bold text-indigo-700 mb-6"><%= @product.name %></h1>
  
        <!-- Imagen destacada -->
        <% if @product.featured_image.attached? %>
          <div class="mb-8">
            <%= image_tag @product.featured_image, class: "rounded-xl w-full object-cover max-h-[450px] shadow" %>
          </div>
        <% end %>
  
        <!-- Descripción -->
        <p class="text-black text-lg mb-6 leading-relaxed"><%= @product.description %></p>
  
        <!-- Inventario parcial -->
        <div class="mb-10">
          <%= render "inventory", product: @product %>
        </div>
  
        <!-- Botones de acción -->
        <div class="flex justify-between items-center">
          <%= link_to "← Back", products_path, class: "text-indigo-600 hover:text-indigo-800 font-medium transition" %>
  
          <% if authenticated? %>
            <div class="space-x-4">
              <%= link_to "Edit", edit_product_path(@product), 
                          class: "bg-yellow-400 hover:bg-yellow-500 text-black px-4 py-2 rounded-lg shadow-md transition" %>
  
              <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" },
                              class: "bg-red-500 hover:bg-red-600 text-black px-4 py-2 rounded-lg shadow-md transition",
                              form_class: "inline" %>
            </div>
          <% end %>
        </div>
  
      </div>
    </div>
  <% end %>
  