<!-- Fondo general con gradiente -->
<div class="min-h-screen bg-gradient-to-br from-indigo-200 via-purple-100 to-blue-200">

  <!-- Header -->
  <header class="bg-white shadow-md sticky top-0 z-10">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-indigo-700"><%= t ".title" %></h1>
      
      <% if authenticated? %>
        <%= link_to "âž• Create New Product", new_product_path,
                    class: "bg-indigo-600 text-white font-semibold px-4 py-2 rounded-lg shadow hover:bg-indigo-700 transition duration-200" %>
      <% end %>
    </div>
  </header>

  <!-- Contenido principal -->
  <main class="container mx-auto px-6 py-10">
    <div id="products" class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">

      <% @products.each do |product| %>
        <%= link_to product_path(product),
                    class: "block bg-white rounded-xl shadow-md hover:shadow-lg transition duration-300 border border-gray-100 hover:border-indigo-400 p-6 transform hover:-translate-y-1" do %>
          
          <!-- Nombre del producto -->
          <h3 class="text-xl font-semibold text-indigo-700 mb-2"><%= product.name %></h3>
          
          <!-- Placeholder opcional para detalles -->
          <p class="text-gray-500 text-sm">Click to see more details</p>
          
        <% end %>
      <% end %>

    </div>
  </main>

</div>
